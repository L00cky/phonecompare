<!DOCTYPE html>
<html lang="en" data-ng-app="myApp">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>Holo Theme</title>
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet" content-type="text/css">
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href="css/styles.css" rel="stylesheet" content-type="text/css">
</head>
<body data-ng-controller="PhoneListCtrl">
    <!-- top navbar -->
    <div id="fixed-header">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Show filters</a>
    </div>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="col-xs-0 col-sm-4 colcol-lg-2">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="manufacturers">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#manufacturers" aria-expanded="true" aria-controls="manufacturers">
                                <label>Manufacturers</label><span class="badge"> {{manufacturers.length}}</span><br />
                            </a>
                        </h4>
                    </div>
                    <div id="manufacturers" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="manufacturers">
                        <div class="panel-body">
                            <span class="manufacturers_filter" data-ng-repeat="manufacturer in manufacturers">
                                <input type="checkbox" data-ng-model='search.manufacturer' data-ng-true-value="'{{manufacturer.manufacturer}}'" data-ng-false-value='' /> {{manufacturer.manufacturer}}
                            </span>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sx-12 col-sm-4 col-lg-2" data-ng-repeat="smartphone in smartphones | filter:search.manufacturer">
                        <div class="thumbnail">
                            <img ng-src='{{smartphone.img}}'>
                            <div class="caption">
                                <h5><u><strong>{{smartphone.manufacturer}}</strong></u> {{smartphone.name}}</h5>
                            </div>
                            <p><div class="btn btn-primary">{{smartphone.price | currency}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!--footer-->
    <footer class="navbar navbar-default navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="row">
                <ul class="list-unstyled text-right">
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">About</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Services</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Studies</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">References</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Login</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Press</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Contact</a>
                    </li>
                    <li class="col-sm-4 col-xs-6">
                        <a href="#">Impressum</a>
                    </li>
                </ul>
            </div><!--/row-->
        </div><!--/container-->
    </footer>

    <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/scripts.js"></script>
    <script src="js/angular.js"></script>
    <script src="controllers/mainController.js"></script>
    <!--<script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>-->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>